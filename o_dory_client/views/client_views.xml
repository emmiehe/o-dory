    <record id="view_o_dory_account" model="ir.ui.view">
      <field name="name">o.dory.account.view</field>
      <field name="model">o.dory.account</field>
      <field name="arch" type="xml">
	<form>
	  <header>
	    <button string="Test Connection" type="object" name="verify_connection" class="btn-primary"/>
	    <button string="Upload a File" type="action" name="%(action_client_upload_wizard)d" class="btn-primary"/>
	    <button string="Remove a File" type="action" name="%(action_client_remove_wizard)d" class="btn-primary"/>
	    <button string="Update a File" type="action" name="%(action_client_update_wizard)d" class="btn-primary"/>
	    <button string="Search Keyword" type="action" name="%(action_client_search_wizard)d" class="btn-primary"/>
	  </header>
	  <sheet>		    
	    <group>
	      <group>
		<field name="name"/>
		<field name="oid"/>
		<field name="account"/>
		<field name="password" password="True"/>
		<field name="url"/>
		<field name="db"/>
	      </group>
	    </group>
	  </sheet>
	</form>
      </field>
    </record>


    <record id="action_client" model="ir.actions.act_window">
      <field name="name">O-DORY Account</field>
      <field name="res_model">o.dory.account</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
    </record>
   
    <menuitem id="menu_o_dory_account" name="O-DORY Account" action="action_client" sequence="7" active="1"/>

    
  </data>
</odoo>
